{% extends 'base1.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

      <table id="datatablesSimple">
              <thead>
            <tr>
                <th>Id</th>
                <th>Nom_user</th>
                <th>Prenom_user</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>Poste</th>
                <th>Num_carte_bancaire</th>
                <th>Tel</th>
                <th>Lieu_ns</th>
                <th>Civilite</th>
                <th>Date_ne</th>
                <th>Situation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.poste }}</td>
                <td>{{ user.numCarteBancaire }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.lieuNs }}</td>
                <td>{{ user.civilite }}</td>
                <td>{{ user.dateNe }}</td>
                <td>{{ user.situation }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
